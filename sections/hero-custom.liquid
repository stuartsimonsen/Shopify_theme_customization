<div class="custom-hero hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %} box ratio-container lazyload js"
     {% if section.settings.image %}
     data-bgset="{% include 'bgset', image: section.settings.image %}"
     data-sizes="auto"
     data-parent-fit="cover"
     style="background-position: {{ section.settings.alignment }}; background-image: url('{{ section.settings.image | img_url: '300x300' }});"
     {% endif %}>
  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% endif %}
  <div class="hero__inner">
    <div class="page-width">
      {% if section.settings.title != blank %}
        <h2 class="h1 mega-title customalign{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.title2 != blank %}
        <h2 class="h1 mega-title customalign{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title2 | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rte-setting mega-subtitle customalign{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ section.settings.text }}</div>
      {% endif %}
      {% if section.settings.swatch_label != blank %}
        <div class="rte-setting mega-subtitle swatch-label customalign">{{ section.settings.swatch_label }}</div>
      {% endif %}
      {% if section.settings.swatch1 != blank %}
        <div class="homeswatch" style="background-color: {{ section.settings.swatch1 }};"></div>
      {% endif %}
      {% if section.settings.swatch2 != blank %}
        <div class="homeswatch" style="background-color: {{ section.settings.swatch2 }};"></div>
      {% endif %}
      <p class="clearfix"></p>

      {% if section.settings.price != blank %}
        <div class="rte-setting mega-subtitle hero-price customalign" itemprop="price" content="99.0">
          <span style="text-decoration:line-through;font-size:12px;">€99.00</span>
            		  <span class="money" wg-notranslate="manual" doubly-currency-eur="6999" doubly-currency-gbp="6999.01105173396" doubly-currency="EUR">€69.99</span>
         
          <!--      
          <span class="money" wg-notranslate="manual" doubly-currency-eur="9900" doubly-currency-usd="12275.309145329999" doubly-currency-gbp="8999.01105173396" doubly-currency="EUR">€99.00</span>
			-->
       </div>

      {% endif %}
      {% if section.settings.small_print != blank %}
        <div class="rte-setting small-print customalign">+ <a class="serviceblue" href="/pages/service-fee">Service fee</a> starting from <span class="money" wg-notranslate="manual" doubly-currency-eur="299" doubly-currency="EUR" doubly-currency-gbp="265.35653572137204" doubly-currency-usd="370.73913479329997" doubly-currency-cny="2342.776593786393" data-wg-notranslate="manual">€2,99 EUR</span> / month<br>3 months FREE subscription included
      
       
      </div>
      {% endif %}
      <p class="clearfix"></p>


      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn hero__btn custom-hero__btn">
          {{ section.settings.button_label | escape }}
        </a>
      {% endif %}
      {% if section.settings.button_label_two != blank and section.settings.button_link_two != blank %}
        <a href="{{ section.settings.button_link_two }}" class="btn hero__btn custom-hero__btn">
          {{ section.settings.button_label_two | escape }}
        </a>
      {% endif %}

    </div>
  </div>
  <div class="floating-image">
  <!--  <img src="https://cdn.shopify.com/s/files/1/2590/2182/files/home-header-screenshot-5x-min.png?17327333122395301486"> -->
        <img src="https://cdn.shopify.com/s/files/1/0007/0615/0436/files/copy.png?13468433553617284722">
  </div>
</div>

<noscript>
  <div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}"{% if section.settings.image %} style="background-image: url('{{ section.settings.image | img_url: '2048x' }}'); background-position: center {{ section.settings.alignment }};"{% endif %}></div>
</noscript>

{% schema %}
  {
    "name": "Custom Hero",
    "class": "index-section index-section--flush",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Image alignment",
        "default": "center",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Middle"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "PawTrails"
      },
      {
        "type": "text",
        "id": "title2",
        "label": "Second Heading",
        "default": "Smart Collar"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Paw Trails Smart Collar/Harness and App<br>Puts you in control of your pet</p>"
      },
      {
        "type": "select",
        "id": "hero_size",
        "label": "Section height",
        "default": "medium",
        "options": [
          {
            "label": "Extra Small",
            "value": "x-small"
          },
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          },
          {
            "label": "Extra Large",
            "value": "x-large"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "default": "medium",
        "options": [
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          }
        ]
      },
      {
        "type": "text",
        "id": "swatch_label",
        "label": "Swatch Label",
        "default": "Color"
      },
      {
        "type": "color",
        "id": "swatch1",
        "label": "First Color Swatch",
        "default": "#e94044"
      },
	  {
        "type": "color",
        "id": "swatch2",
        "label": "Second Color Swatch",
        "default": "#38302e"
      },
      {
        "type": "text",
        "id": "price",
        "label": "Price",
		"default": "€99"
      },
      {
        "type": "text",
        "id": "small_print",
        "label": "Small Print",
		"default": "<p>+ Service fee starting from € 2.99 / month<br>3 months FREE subscription included</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "text",
        "id": "button_label_two",
        "label": "Second button label"
      },
      {
        "type": "url",
        "id": "button_link_two",
        "label": "Second button link"
      }
    ],
    "presets": [
      {
        "name": "Custom Hero",
        "category": "Image"
      }
    ]
  }
{% endschema %}

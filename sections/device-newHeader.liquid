
<style>
  
/****new device page four boxes****/
#fourbox {
    text-align: justify;
    -ms-text-justify: distribute-all-lines;
    text-justify: distribute-all-lines;
    width:50%;
  	margin-top:3em;
}

@media screen and (max-width: 749px) {
    #fourbox{
     width:100%;
    }
}


#fourbox>div {
    width: 120px;
    height: 120px;
    vertical-align: top;
    display: inline-block;
    *display: inline;
    zoom: 1;
    background:#ffffff;
    border-radius: 4px;
  	margin-top:30px;
    position: relative;
  
}

.fa_track {
   position: absolute;
   top: 50%;
   left: 50%;
   transform: translate(-50%, -50%);
}  

span {
    width: 25%;
    display: inline-block;
    font-size: 0;
    line-height: 0
}

 .fourbox_text{
    font-size:12px;
   	position: absolute;
   	top: 70%; 
   	left:12%;  
  }

  .rectangle{
    text-align:center; 
  }
  
  @media screen and (max-width: 749px) {
    .devicenewHeader{
      margin-top:50px!important; 
    }
    #fourbox{
      display:none!important; 
    }
  }
	
  @media only screen and (max-width: 989px){
    #deviceSmallScreen {
         background-size: cover!important;
      	 height:300px;
    }
  }
  

  
</style>


<div id="deviceSmallScreen" class="custom-hero hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %} box ratio-container lazyload js"
     {% if section.settings.image %}
     data-bgset="{% include 'bgset', image: section.settings.image %}"
     data-sizes="auto"
     data-parent-fit="cover"
     style="background-position: {{ section.settings.alignment }}; background-image: url('{{ section.settings.image | img_url: '300x300' }});"
     {% endif %}>
  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% endif %}
  <div class="hero__inner">
    <div class="page-width devicenewHeader">
      	
      <p id="newPawtrails" style="color:#ffffff;font-size:18px;">The New PawTrails</p>
      
      {% if section.settings.title != blank %}
        <h2 class="h1 mega-title customalign{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.title2 != blank %}
        <h2 class="h1 mega-title customalign{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title2 | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rte-setting mega-subtitle customalign{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ section.settings.text }}</div>
      {% endif %}
   
   
      <p class="clearfix"></p>

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn hero__btn custom-hero__btn">
          {{ section.settings.button_label | escape }}
        </a>
      {% endif %}
      {% if section.settings.button_label_two != blank and section.settings.button_link_two != blank %}
        <a href="{{ section.settings.button_link_two }}" class="btn hero__btn custom-hero__btn">
          {{ section.settings.button_label_two | escape }}
        </a>
      {% endif %}
	
      <div id="fourbox">
        <div class="rectangle"><img class="fa_track" src="https://cdn.shopify.com/s/files/1/0007/0615/0436/files/ic-track.svg?18076087985504101995" align="center"><p class="fourbox_text" style="left:15%!important;">Live Tracking</p></div>
          <div class="rectangle"><img class="fa_track" src="https://cdn.shopify.com/s/files/1/0007/0615/0436/files/monitor.svg?9296486411603491471" align="center"><p class="fourbox_text">Activity Monitor</p></div>
          <div class="rectangle"><img class="fa_track" src="https://cdn.shopify.com/s/files/1/0007/0615/0436/files/safezone.svg?9296486411603491471" align="center"><p class="fourbox_text" style="left:23%!important;">Safe Zone</p></div>
          <div class="rectangle"><img class="fa_track" src="https://cdn.shopify.com/s/files/1/0007/0615/0436/files/ic-track.svg?18076087985504101995" align="center"><p class="fourbox_text">Health Advisor</p></div> <span></span>
      </div>
    </div>
    
  </div>
  <div class="floating-dog">
  <!--  <img src="https://cdn.shopify.com/s/files/1/2590/2182/files/home-header-screenshot-5x-min.png?17327333122395301486"> -->
       <img style="height:550px;" src="https://cdn.shopify.com/s/files/1/0007/0615/0436/files/spotDOG.png?2370546342377362363"> 
  </div>
</div>

<noscript>
  <div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}"{% if section.settings.image %} style="background-image: url('{{ section.settings.image | img_url: '2048x' }}'); background-position: center {{ section.settings.alignment }};"{% endif %}></div>
</noscript>

{% schema %}
  {
    "name": "Device Hero",
    "class": "index-section index-section--flush",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Image alignment",
        "default": "center",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Middle"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "PawTrails"
      },
      {
        "type": "text",
        "id": "title2",
        "label": "Second Heading",
        "default": "Smart Collar"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Paw Trails Smart Collar/Harness and App<br>Puts you in control of your pet</p>"
      },
      {
        "type": "select",
        "id": "hero_size",
        "label": "Section height",
        "default": "medium",
        "options": [
          {
            "label": "Extra Small",
            "value": "x-small"
          },
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          },
          {
            "label": "Extra Large",
            "value": "x-large"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "default": "medium",
        "options": [
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          }
        ]
      },
    

      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "text",
        "id": "button_label_two",
        "label": "Second button label"
      },
      {
        "type": "url",
        "id": "button_link_two",
        "label": "Second button link"
      }
    ],
    "presets": [
      {
        "name": "Device Hero",
        "category": "Image"
      }
    ]
  }
{% endschema %}

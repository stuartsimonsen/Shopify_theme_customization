          <div id="home_btn_section">
 			<a href="/products/newpawTrails">
              <div class="btn home_btn" id="home_btn1">
                Buy Now
              </div>
            </a>
            
            <a href="/pages/retailer-demo">
              <div class="btn home_btn retailerBtn" id="home_btn2">
